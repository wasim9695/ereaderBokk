<%- include ('header')%>
<%- include ('sidebar')%>
<%- include ('navbread')%>

   
    <section>
        <div class="container py-4 ">
          <div class="row">
            <div class="col-lg-8 mx-auto d-flex justify-content-center flex-column shadow-lg">
              <h3 class="text-center">Book List</h3>
              
              <div class="card">
                <div class="table-responsive">
                  
                  <table class="table align-items-center mb-0">
                    <thead>
                      <tr>
                        <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">S.No</th>
                        <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Book Name</th>
                        <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Book Images</th>
                        <th class="text-secondary opacity-7"></th>
                      </tr>
                    </thead>
                    <tbody>
                      <% data.forEach((book,index)=>{%>

                    
                      <tr>
                        <td>
                          <%- index+1%>
                        </td>
                        <td>
                          <%- book.name%>
                        </td>
                        <td>
                          <img style="width: 20%;" src="/upload/<%- book.file%>"/>
                        </td>
                        <td>
                          <a href="/deletebook/<%- book._id%>">Delete</a>
                        </td>
                       </tr>
                      <%}) %>

                    </tbody>
                  </table>
                  <!-- Previous page link -->

                </div>
                
              </div>
              
            </div>
          </div>
        </div>
      </section>
  </main>

  <%- include ('footer')%>