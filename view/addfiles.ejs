<%- include ('header')%>
<%- include ('sidebar')%>
<%- include ('navbread')%>
    <section>
        <div class="container py-4 ">
          <div class="row">
            <div class="col-lg-7 mx-auto d-flex justify-content-center flex-column shadow-lg">
              <h3 class="text-center">Add File</h3>
              <form role="form" action="/addfiless" id="contact-form" method="post" autocomplete="off">
                <div class="card-body">
                  <div class="row">
                    <div class="form-group mb-4">
                        <label>Artwork</label>
                        <textarea name="unicodes" style="height: 200px;" class="form-control" id="editor" rows="4"></textarea>
                      </div>
                  </div>
                  <div class="row">
                    <input type="hidden" name="file" id="files"/>
                    <div class="col-6 form-group">
                        <label>Upload </label>
                        <input type="file"  name="fileupload" id="fileupload" class="form-control" >
                      </div>
                      <div class="col-4  form-group">
                        <label>Submit</label>
                        <input type="button" name="button" onclick="uploadFile()" id="submits" value="save" class="form-control" >
                      </div>
                  </div>
                  <div class="row">
                    <div class="form-group mb-4">
                        <label>books</label>
                        <select name="unicodebook" class="form-control">
                          <% data.forEach((books, index)=>{%>
                          <option value="<%-books._id%>"><%-books.name%></option>
                          <%})%>
                        </select>
                       
                      </div>
                  </div>
                  <!-- <div class="row">
                    <div class="form-group mb-4">
                        <label>Title</label>
                        <input type="text" name="title" class="form-control" >
                      </div>
                  </div> -->
                  
                  <div class="form-group mb-4">
                    <label>Tags</label>
                    <textarea name="tags" class="form-control" id="message" rows="4"></textarea>
                  </div>
                 
                  <div class="row">
                    <div class="col-md-12">
                      
                    </div>
                    <div class="col-md-12">
                      <button type="submit" class="btn bg-gradient-dark w-100">Save</button>
                    </div>
                  </div>
                </div>
              </form>
            </div>
          </div>
        </div>
      </section>
  </main>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.1/jquery.min.js"></script>
  <script type="text/javascript">
  async function uploadFile() {
    let formData = new FormData(); 
    formData.append("fileupload", fileupload.files[0]);
    const response = await fetch('http://localhost:7000/fileUpload', {
      method: "POST", 
      body: formData
    }); 
    const data = await response.json();
    // console.log(data.data);
    document.querySelector("#files").value=data.data;
    
  }
  </script>
  <%- include ('footer')%>