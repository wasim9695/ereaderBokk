<%- include ('header')%>
<%- include ('sidebar')%>
<%- include ('navbread')%>
<% if(data==''){
  dadas = [];
  actionData = "/signUpWeb";
  actionDataButton = "save";
}else{
  dadas = data;
  actionData = "/signUpWebUpdate/"+dadas.id;
  actionDataButton = "Update";
} %>

    <section>
        <div class="container py-4 ">
          <div class="row">
            <div class="col-lg-7 mx-auto d-flex justify-content-center flex-column shadow-lg">
              <h3 class="text-center">User Managment  </h3>
              <form role="form" action="<%- actionData%>" id="contact-form" method="post" autocomplete="off">
                <div class="card-body">
                  <div class="row">
                    <div class="col-md-6">
                      <label>First Name</label>
                      <div class="input-group mb-4">
                        <input class="form-control" name="fullName" value="<%- dadas.fullName%>" placeholder="" aria-label="First Name..." type="text" >
                      </div>
                    </div>
                    <div class="col-md-6 ps-2">
                      <label>Email Address</label>
                      <div class="input-group">
                        <input type="email" name="emailId" value="<%- dadas.emailId%>" class="form-control" placeholder="" >
                      </div>
                    </div>
                  </div>
                  <div class="row mb-4">
                    <div class="col-md-6 ps-2">
                        <label>Password</label>
                        <div class="input-group">
                          <input type="password"  value="<%- dadas.password%>" name="password" class="form-control" placeholder="" >
                        </div>
                      </div>
                    
                      <div class="col-md-6 ps-2">
                        <label>Phone No</label>
                        <div class="input-group">
                          <input type="text" name="mobileNo" value="<%- dadas.mobileNo%>" class="form-control" placeholder="" >
                        </div>
                      </div>
                  </div>

                  <div class="row mb-4">
                    <div class="col-md-6 ps-2">
                        <label>Gender</label>
                        <div class="input-group">
                          <input type="text" name="gender" value="<%- dadas.gender%>" class="form-control" placeholder="" >
                        </div>
                      </div>
                    
                      <div class="col-md-6 ps-2">
                        <label>DOB <%- dadas.dob%></label>
                        <div class="input-group">
                          <input type="date" name="dob" class="form-control" placeholder="" >
                        </div>
                      </div>
                  </div>
                  <div class="form-group mb-4">
                    <label>Address Line One</label>
                    <textarea name="addresone"  class="form-control" id="message" rows="4"><%- dadas.addresone%></textarea>
                  </div>
                  <div class="form-group mb-4">
                    <label>Address Line Two</label>
                    <textarea name="addrestwo"  class="form-control" id="message" rows="4"><%- dadas.addrestwo%></textarea>
                  </div>


                  <div class="row mb-4">
                    <div class="col-md-6 ps-2">
                        <label>City</label>
                        <div class="input-group">
                          <input type="text"  name="city" value="<%- dadas.city%>" class="form-control" placeholder="" >
                        </div>
                      </div>
                    
                      <div class="col-md-6 ps-2">
                        <label>Zip Code</label>
                        <div class="input-group">
                          <input type="text" name="zipcode" value="<%- dadas.zipcode%>" class="form-control" placeholder="" >
                        </div>
                      </div>
                  </div>

                  
                  <div class="row">
                    <div class="col-md-12">
                      
                    </div>
                    <div class="col-md-12">
                      <button type="submit" class="btn bg-gradient-dark w-100"><%- actionDataButton%></button>
                    </div>
                  </div>
                </div>
              </form>
            </div>
          </div>
        </div>
      </section>
  </main>

  <%- include ('footer')%>