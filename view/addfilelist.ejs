                      <li class="page-item">
                        <a class="page-link" href="/viewfilesall?page=<%- page + 1 %>" aria-label="Next">
                          <i class="fa fa-angle-right"></i>
                          <span class="sr-only">Next</span>
                        </a>
                      </li>
                    </ul>
                  </nav>

